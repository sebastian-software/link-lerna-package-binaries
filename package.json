{
  "name": "link-lerna-package-binaries",
  "version": "1.0.1",
  "description": "A small tool built on top of Lerna to link binaries offered by packages to root-level.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "bin": {
    "link-lerna-package-binaries": "bin/link-lerna-package-binaries"
  },
  "files": [
    "bin/"
  ],
  "scripts": {
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "clean": "rimraf bin dist",
    "prepare": "preppy",
    "lint": "eslint '**/*.js'",
    "lint:format": "prettier --write '**/*.js' && eslint --fix '**/*.js'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@effective/eslint-config": "^1.4.0",
    "eslint": "^6.8.0",
    "preppy": "^9.3.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@lerna/command": "3.x",
    "@lerna/create-symlink": "3.x"
  }
}
